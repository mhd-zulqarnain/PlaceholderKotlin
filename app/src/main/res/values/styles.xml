<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/whiteColor</item>
        <item name="android:textColorSecondary">@color/whiteColor</item>
        <item name="actionMenuTextColor">@color/whiteColor</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/large_padding</item>
    </style>

</resources>
